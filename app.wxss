:root {
  --bg-top: #fbf8f0;
  --bg-bottom: #f2edf9;
  --shell: #fffdf8;
  --ink: #2e2441;
  --muted: #8b809e;
  --accent: #8759c7;
  --line: #ddd2f2;
  --ok: #2f9e73;
  --warn: #be5e46;
}

page {
  background: linear-gradient(180deg, var(--bg-top) 0%, var(--bg-bottom) 100%);
  color: var(--ink);
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
  min-height: 100%;
}

.container {
  padding: 0 40rpx 40rpx;
}

.screen-shell {
  background: var(--shell);
  border-radius: 28rpx;
  border: 1rpx solid #e8def7;
  box-shadow: 0 10rpx 24rpx rgba(46, 36, 65, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.2;
}

.subtitle {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--muted);
  line-height: 1.4;
}

.label {
  margin: 40rpx 0 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

button {
  border: none;
}

button::after {
  border: none;
}

.primary-btn {
  width: 100%;
  margin-top: 0;
  background: var(--accent);
  color: #fff;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 700;
  height: 86rpx;
  line-height: 86rpx;
}

.secondary-btn {
  width: 100%;
  margin-top: 0;
  border-radius: 999rpx;
  border: 1rpx solid var(--accent);
  color: var(--accent);
  background: #fff;
  font-size: 30rpx;
  font-weight: 700;
  height: 86rpx;
  line-height: 86rpx;
}

.page-caption {
  margin-top: 44rpx;
  text-align: center;
  color: #8b809e;
  font-size: 22rpx;
}
