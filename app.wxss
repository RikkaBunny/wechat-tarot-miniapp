page {
  min-height: 100%;
  background: radial-gradient(circle at 18% 8%, #3a236b 0%, #1a1130 42%, #0d0918 100%);
  color: #f7f2e6;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.container {
  min-height: 100vh;
  padding: 26rpx;
  box-sizing: border-box;
}

.screen-shell {
  border-radius: 30rpx;
  border: 1rpx solid rgba(240, 208, 142, 0.42);
  background: linear-gradient(180deg, rgba(34, 22, 62, 0.92), rgba(15, 10, 28, 0.95));
  box-shadow: 0 22rpx 60rpx rgba(4, 2, 8, 0.58);
  padding: 34rpx;
  box-sizing: border-box;
  backdrop-filter: blur(12rpx);
}

.screen-header {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.header-pill {
  align-self: flex-start;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(240, 208, 142, 0.4);
  font-size: 20rpx;
  color: #f0d08e;
  background: rgba(240, 208, 142, 0.08);
}

.title {
  font-size: 44rpx;
  line-height: 1.2;
  font-weight: 700;
  color: #fff8ec;
}

.subtitle {
  font-size: 23rpx;
  line-height: 1.55;
  color: rgba(245, 233, 208, 0.82);
}

.label {
  margin: 24rpx 0 12rpx;
  font-size: 25rpx;
  color: #f5dca7;
}

.label.compact {
  margin: 0 0 12rpx;
}

.panel-card {
  margin-top: 18rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(240, 208, 142, 0.24);
  background: rgba(15, 10, 28, 0.62);
  padding: 20rpx;
  box-sizing: border-box;
}

button {
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

button::after {
  border: none;
}

.primary-btn,
.secondary-btn,
.ghost-btn {
  width: 100%;
  height: 84rpx;
  border-radius: 999rpx;
  font-size: 27rpx;
  font-weight: 700;
}

.primary-btn {
  color: #2c1a07;
  background: linear-gradient(135deg, #f5d78f, #ca9a41);
}

.secondary-btn {
  color: #f7e5bf;
  border: 1rpx solid rgba(245, 215, 151, 0.45);
  background: rgba(30, 18, 56, 0.72);
}

.ghost-btn {
  color: rgba(247, 229, 191, 0.86);
  border: 1rpx solid rgba(245, 215, 151, 0.22);
  background: rgba(16, 10, 32, 0.52);
}

.page-caption {
  margin-top: 24rpx;
  text-align: center;
  color: rgba(245, 233, 208, 0.66);
  font-size: 22rpx;
}
