page {
  background: linear-gradient(180deg, #fbf8f0 0%, #f2edf9 100%);
  color: #2e2441;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
  min-height: 100%;
}

.container {
  padding: 0 40rpx 40rpx;
}

.screen-shell {
  background: #fffdf8;
  border-radius: 28rpx;
  border: 1rpx solid #e8def7;
  box-shadow: 0 10rpx 24rpx rgba(46, 36, 65, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.2;
}

.subtitle {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #8b809e;
  line-height: 1.4;
}

.label {
  margin: 40rpx 0 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

button {
  border: none;
}

button::after {
  border: none;
}

.primary-btn {
  width: 100%;
  margin-top: 0;
  background: #8759c7;
  color: #fff;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 700;
  height: 86rpx;
  line-height: 86rpx;
}

.secondary-btn {
  width: 100%;
  margin-top: 0;
  border-radius: 999rpx;
  border: 1rpx solid #8759c7;
  color: #8759c7;
  background: #fff;
  font-size: 30rpx;
  font-weight: 700;
  height: 86rpx;
  line-height: 86rpx;
}

.page-caption {
  margin-top: 44rpx;
  text-align: center;
  color: #8b809e;
  font-size: 22rpx;
}
