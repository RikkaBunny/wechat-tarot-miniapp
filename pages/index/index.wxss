.index-shell {
  margin-top: 92rpx;
  min-height: 960rpx;
  box-sizing: border-box;
  padding: 34rpx;
}

.home-title {
  font-size: 36rpx;
}

.home-subtitle {
  font-size: 22rpx;
}

.index-shell .label {
  margin: 30rpx 0 16rpx;
  font-size: 26rpx;
}

.question-input {
  width: 100%;
  height: 140rpx;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.question-input::placeholder {
  color: #9b92ab;
  font-size: 20rpx;
}

.spread-label {
  margin-top: 56rpx;
}

.picker {
  background: #fff;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 0 18rpx;
  font-size: 22rpx;
  color: #4d3d6f;
  height: 68rpx;
  line-height: 68rpx;
}

.action-main {
  margin-top: 74rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
}

.action-sub {
  margin-top: 20rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
}

.launch-mask {
  position: fixed;
  inset: 0;
  z-index: 999;
  background: rgba(22, 17, 35, 0.72);
  display: flex;
  justify-content: center;
  align-items: center;
}

.launch-stage {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.launch-card {
  width: 320rpx;
  height: 470rpx;
  position: relative;
  transform-style: preserve-3d;
  animation: launchFlip 1.3s ease-out forwards;
}

.launch-face {
  position: absolute;
  inset: 0;
  border-radius: 24rpx;
  border: 2rpx solid #e3d8f6;
  backface-visibility: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.launch-face-back {
  background: linear-gradient(160deg, #301f4c, #8759c7);
  color: #efe6ff;
  font-size: 44rpx;
  letter-spacing: 4rpx;
  font-weight: 700;
}

.launch-face-front {
  background: #fffdf8;
  color: #4d3d6f;
  font-size: 38rpx;
  font-weight: 700;
  transform: rotateY(180deg);
}

.launch-tip {
  color: #f1e8ff;
  font-size: 24rpx;
}

@keyframes launchFlip {
  0% {
    transform: rotateY(0deg);
  }
  100% {
    transform: rotateY(180deg);
  }
}
