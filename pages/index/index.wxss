.index-shell {
  margin-top: 72rpx;
  min-height: 980rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.home-title {
  font-size: 44rpx;
}

.home-subtitle {
  max-width: 540rpx;
}

.question-input {
  width: 100%;
  height: 168rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.35);
  border-radius: 20rpx;
  padding: 18rpx 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 1.5;
  color: #fff8ea;
  background: rgba(20, 13, 38, 0.75);
}

.question-input::placeholder {
  color: rgba(247, 229, 191, 0.52);
}

.spread-label {
  margin-top: 30rpx;
}

.picker {
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.35);
  background: rgba(20, 13, 38, 0.8);
  color: #f8e4bb;
  font-size: 24rpx;
  padding: 0 18rpx;
}

.action-main {
  margin-top: 52rpx;
}

.quick-grid {
  margin-top: 22rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.quick-btn {
  width: calc((100% - 16rpx) / 2);
  height: 74rpx;
  font-size: 24rpx;
}

.quick-btn.wide {
  width: 100%;
}

.launch-mask {
  position: fixed;
  inset: 0;
  z-index: 999;
  background: radial-gradient(circle at center, rgba(44, 26, 74, 0.7) 0%, rgba(9, 5, 16, 0.97) 76%);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.magic-bg {
  position: absolute;
  inset: 0;
}

.spark {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 242, 200, 0.9);
  box-shadow: 0 0 12rpx rgba(255, 242, 200, 0.8);
  animation: twinkle 3s ease-in-out infinite;
}

.spark-1 {
  top: 18%;
  left: 16%;
}

.spark-2 {
  top: 28%;
  right: 17%;
  animation-delay: 0.4s;
}

.spark-3 {
  top: 45%;
  left: 10%;
  animation-delay: 0.9s;
}

.spark-4 {
  bottom: 23%;
  right: 20%;
  animation-delay: 1.2s;
}

.spark-5 {
  bottom: 16%;
  left: 24%;
  animation-delay: 1.6s;
}

.spark-6 {
  top: 62%;
  right: 9%;
  animation-delay: 2s;
}

.launch-stage {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 26rpx;
}

.launch-aura {
  position: absolute;
  width: 680rpx;
  height: 680rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(184, 135, 250, 0.24) 0%, rgba(184, 135, 250, 0.02) 72%);
}

.launch-card {
  width: 520rpx;
  height: 820rpx;
  position: relative;
  transform: scaleX(1);
  transition: transform 0.38s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
}

.launch-card.is-squeezed {
  transform: scaleX(0.04);
}

.launch-face {
  position: absolute;
  inset: 0;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  opacity: 0;
  transition: opacity 0.08s linear;
}

.launch-face.visible {
  opacity: 1;
}

.launch-face-back {
  background: linear-gradient(160deg, #28183d, #59338a 58%, #7e56b8);
}

.launch-face-front {
  background: linear-gradient(180deg, #fffdf8 0%, #f4ecff 100%);
  flex-direction: column;
  padding: 0 66rpx;
  gap: 14rpx;
  text-align: center;
}

.card-frame {
  position: absolute;
  pointer-events: none;
  border-radius: 26rpx;
}

.card-frame-outer {
  inset: 20rpx;
  border: 2rpx solid rgba(245, 220, 146, 0.9);
}

.card-frame-inner {
  inset: 42rpx;
  border: 2rpx solid rgba(245, 220, 146, 0.52);
}

.clow-symbol {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.clow-core-ring {
  width: 180rpx;
  height: 180rpx;
  border: 4rpx solid #f5dc92;
  border-radius: 50%;
}

.clow-core-dot {
  position: absolute;
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  border: 3rpx solid #f5dc92;
}

.clow-wing {
  position: absolute;
  top: 112rpx;
  width: 96rpx;
  height: 46rpx;
  border-top: 4rpx solid #f5dc92;
}

.wing-left {
  left: 0;
  border-radius: 70rpx 0 0 0;
}

.wing-right {
  right: 0;
  border-radius: 0 70rpx 0 0;
}

.clow-star {
  position: absolute;
  top: 20rpx;
  color: #f5dc92;
  font-size: 44rpx;
}

.reveal-title {
  color: #4d3d6f;
  font-size: 46rpx;
  font-weight: 700;
}

.reveal-badge {
  margin-top: 6rpx;
  min-width: 132rpx;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 18rpx;
  border-radius: 22rpx;
  border: 1rpx solid #8759c7;
  color: #8759c7;
  font-size: 24rpx;
  font-weight: 700;
}

.reveal-sub {
  margin-top: 10rpx;
  color: #6a5c84;
  font-size: 26rpx;
  line-height: 1.6;
}

.reveal-advice {
  color: #8c81a3;
  font-size: 22rpx;
  line-height: 1.6;
}

.launch-tip {
  color: rgba(241, 232, 255, 0.9);
  font-size: 24rpx;
}

@keyframes twinkle {
  0%,
  100% {
    transform: scale(0.72);
    opacity: 0.45;
  }
  50% {
    transform: scale(1.15);
    opacity: 1;
  }
}
