.index-shell {
  margin-top: 92rpx;
  min-height: 960rpx;
  box-sizing: border-box;
  padding: 34rpx;
}

.home-title {
  font-size: 36rpx;
}

.home-subtitle {
  font-size: 22rpx;
}

.index-shell .label {
  margin: 30rpx 0 16rpx;
  font-size: 26rpx;
}

.question-input {
  width: 100%;
  height: 140rpx;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.question-input::placeholder {
  color: #9b92ab;
  font-size: 20rpx;
}

.spread-label {
  margin-top: 56rpx;
}

.picker {
  background: #fff;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 0 18rpx;
  font-size: 22rpx;
  color: #4d3d6f;
  height: 68rpx;
  line-height: 68rpx;
}

.action-main {
  margin-top: 74rpx;
  height: 78rpx;
  font-size: 28rpx;
}

.action-sub {
  margin-top: 20rpx;
  height: 78rpx;
  font-size: 28rpx;
}

.launch-mask {
  position: fixed;
  inset: 0;
  z-index: 999;
  background: radial-gradient(circle at center, rgba(40, 26, 62, 0.8) 0%, rgba(13, 9, 24, 0.95) 70%);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.magic-bg {
  position: absolute;
  inset: 0;
}

.spark {
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: rgba(255, 242, 200, 0.9);
  box-shadow: 0 0 20rpx rgba(255, 242, 200, 0.8);
  animation: twinkle 1.8s ease-in-out infinite;
}

.spark-1 {
  top: 20%;
  left: 18%;
}

.spark-2 {
  top: 30%;
  right: 16%;
  animation-delay: 0.4s;
}

.spark-3 {
  bottom: 22%;
  left: 24%;
  animation-delay: 0.8s;
}

.spark-4 {
  bottom: 26%;
  right: 20%;
  animation-delay: 1.2s;
}

.launch-stage {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.launch-aura {
  position: absolute;
  width: 620rpx;
  height: 620rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(160, 113, 229, 0.36) 0%, rgba(160, 113, 229, 0.04) 72%);
  filter: blur(2rpx);
  animation: auraPulse 2s ease-in-out infinite;
}

.launch-card {
  width: 520rpx;
  height: 820rpx;
  position: relative;
  transform-style: preserve-3d;
  animation: launchFlip 1.7s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

.launch-face {
  position: absolute;
  inset: 0;
  border-radius: 30rpx;
  backface-visibility: hidden;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.launch-face-back {
  background: linear-gradient(160deg, #28183d, #59338a 58%, #7e56b8);
}

.launch-face-front {
  background: linear-gradient(180deg, #fffdf8 0%, #f4ecff 100%);
  transform: rotateY(180deg);
  flex-direction: column;
  gap: 18rpx;
}

.card-frame {
  position: absolute;
  pointer-events: none;
  border-radius: 26rpx;
}

.card-frame-outer {
  inset: 20rpx;
  border: 2rpx solid rgba(245, 220, 146, 0.9);
}

.card-frame-inner {
  inset: 42rpx;
  border: 2rpx solid rgba(245, 220, 146, 0.52);
}

.clow-symbol {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.clow-core-ring {
  width: 180rpx;
  height: 180rpx;
  border: 4rpx solid #f5dc92;
  border-radius: 50%;
}

.clow-core-dot {
  position: absolute;
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  border: 3rpx solid #f5dc92;
}

.clow-wing {
  position: absolute;
  top: 112rpx;
  width: 96rpx;
  height: 46rpx;
  border-top: 4rpx solid #f5dc92;
}

.wing-left {
  left: 0;
  border-radius: 70rpx 0 0 0;
}

.wing-right {
  right: 0;
  border-radius: 0 70rpx 0 0;
}

.clow-star {
  position: absolute;
  top: 20rpx;
  color: #f5dc92;
  font-size: 44rpx;
}

.clow-label {
  position: absolute;
  bottom: 120rpx;
  color: #f4dfaa;
  letter-spacing: 8rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.reveal-title {
  color: #4d3d6f;
  font-size: 46rpx;
  font-weight: 700;
}

.reveal-sub {
  color: #7b6d94;
  font-size: 26rpx;
}

@keyframes launchFlip {
  0% {
    transform: rotateY(0deg) scale(0.9);
  }
  35% {
    transform: rotateY(65deg) scale(1);
  }
  100% {
    transform: rotateY(180deg) scale(1);
  }
}

@keyframes auraPulse {
  0%,
  100% {
    transform: scale(0.94);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.04);
    opacity: 1;
  }
}

@keyframes twinkle {
  0%,
  100% {
    transform: scale(0.7);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}
