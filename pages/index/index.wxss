.index-shell {
  margin-top: 92rpx;
  min-height: 960rpx;
  box-sizing: border-box;
  padding: 34rpx;
}

.home-title {
  font-size: 36rpx;
}

.home-subtitle {
  font-size: 22rpx;
}

.index-shell .label {
  margin: 30rpx 0 16rpx;
  font-size: 26rpx;
}

.question-input {
  width: 100%;
  height: 140rpx;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.question-input::placeholder {
  color: #9b92ab;
  font-size: 20rpx;
}

.spread-label {
  margin-top: 56rpx;
}

.picker {
  background: #fff;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 0 18rpx;
  font-size: 22rpx;
  color: #4d3d6f;
  height: 68rpx;
  line-height: 68rpx;
}

.action-main {
  margin-top: 74rpx;
  height: 78rpx;
  font-size: 28rpx;
}

.action-sub {
  margin-top: 20rpx;
  height: 78rpx;
  font-size: 28rpx;
}

.launch-mask {
  position: fixed;
  inset: 0;
  z-index: 999;
  background: radial-gradient(circle at center, rgba(40, 26, 62, 0.78) 0%, rgba(13, 9, 24, 0.96) 76%);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.magic-bg {
  position: absolute;
  inset: 0;
}

.spark {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 242, 200, 0.92);
  box-shadow: 0 0 20rpx rgba(255, 242, 200, 0.9);
  animation: twinkle 2s ease-in-out infinite;
}

.spark-1 {
  top: 18%;
  left: 16%;
}

.spark-2 {
  top: 26%;
  right: 18%;
  animation-delay: 0.3s;
}

.spark-3 {
  top: 42%;
  left: 11%;
  animation-delay: 0.7s;
}

.spark-4 {
  bottom: 24%;
  right: 19%;
  animation-delay: 1.1s;
}

.spark-5 {
  bottom: 17%;
  left: 23%;
  animation-delay: 1.4s;
}

.spark-6 {
  top: 60%;
  right: 9%;
  animation-delay: 1.7s;
}

.launch-stage {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 28rpx;
  perspective: 1800rpx;
}

.launch-aura {
  position: absolute;
  width: 680rpx;
  height: 680rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(160, 113, 229, 0.34) 0%, rgba(160, 113, 229, 0.04) 72%);
  filter: blur(2rpx);
  animation: auraPulse 2.2s ease-in-out infinite;
}

.launch-card {
  width: 520rpx;
  height: 820rpx;
  position: relative;
  transform-style: preserve-3d;
  transform-origin: center center;
  animation: launchFlip 2.05s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
  will-change: transform;
}

.launch-sheen {
  position: absolute;
  top: 0;
  bottom: 0;
  left: -45%;
  width: 34%;
  z-index: 4;
  background: linear-gradient(120deg, rgba(255, 255, 255, 0), rgba(255, 245, 221, 0.55), rgba(255, 255, 255, 0));
  transform: skewX(-20deg);
  animation: sheenMove 2.05s ease-out forwards;
  pointer-events: none;
}

.launch-face {
  position: absolute;
  inset: 0;
  border-radius: 30rpx;
  backface-visibility: hidden;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.launch-face-back {
  background: linear-gradient(160deg, #28183d, #59338a 58%, #7e56b8);
}

.launch-face-front {
  background: linear-gradient(180deg, #fffdf8 0%, #f4ecff 100%);
  transform: rotateY(180deg);
  flex-direction: column;
  padding: 0 66rpx;
  gap: 14rpx;
  text-align: center;
}

.card-frame {
  position: absolute;
  pointer-events: none;
  border-radius: 26rpx;
}

.card-frame-outer {
  inset: 20rpx;
  border: 2rpx solid rgba(245, 220, 146, 0.9);
}

.card-frame-inner {
  inset: 42rpx;
  border: 2rpx solid rgba(245, 220, 146, 0.52);
}

.clow-symbol {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.clow-core-ring {
  width: 180rpx;
  height: 180rpx;
  border: 4rpx solid #f5dc92;
  border-radius: 50%;
}

.clow-core-dot {
  position: absolute;
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  border: 3rpx solid #f5dc92;
}

.clow-wing {
  position: absolute;
  top: 112rpx;
  width: 96rpx;
  height: 46rpx;
  border-top: 4rpx solid #f5dc92;
}

.wing-left {
  left: 0;
  border-radius: 70rpx 0 0 0;
}

.wing-right {
  right: 0;
  border-radius: 0 70rpx 0 0;
}

.clow-star {
  position: absolute;
  top: 20rpx;
  color: #f5dc92;
  font-size: 44rpx;
}

.clow-label {
  position: absolute;
  bottom: 120rpx;
  color: #f4dfaa;
  letter-spacing: 8rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.reveal-title {
  color: #4d3d6f;
  font-size: 46rpx;
  font-weight: 700;
}

.reveal-badge {
  margin-top: 6rpx;
  min-width: 132rpx;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 18rpx;
  border-radius: 22rpx;
  border: 1rpx solid #8759c7;
  color: #8759c7;
  font-size: 24rpx;
  font-weight: 700;
}

.reveal-sub {
  margin-top: 10rpx;
  color: #6a5c84;
  font-size: 26rpx;
  line-height: 1.6;
}

.reveal-advice {
  color: #8c81a3;
  font-size: 22rpx;
  line-height: 1.6;
}

.launch-tip {
  color: rgba(241, 232, 255, 0.9);
  font-size: 24rpx;
}

@keyframes launchFlip {
  0% {
    transform: rotateY(0deg) rotateX(-6deg) scale(0.8) translateY(76rpx);
    opacity: 0;
  }
  20% {
    transform: rotateY(14deg) rotateX(-3deg) scale(0.9) translateY(22rpx);
    opacity: 1;
  }
  58% {
    transform: rotateY(98deg) rotateX(0deg) scale(1);
  }
  100% {
    transform: rotateY(180deg) rotateX(0deg) scale(1);
    opacity: 1;
  }
}

@keyframes auraPulse {
  0%,
  100% {
    transform: scale(0.92);
    opacity: 0.74;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
}

@keyframes twinkle {
  0%,
  100% {
    transform: scale(0.65);
    opacity: 0.45;
  }
  50% {
    transform: scale(1.22);
    opacity: 1;
  }
}

@keyframes sheenMove {
  0% {
    left: -45%;
    opacity: 0;
  }
  20% {
    opacity: 0.75;
  }
  68% {
    left: 112%;
    opacity: 0.85;
  }
  100% {
    left: 112%;
    opacity: 0;
  }
}
