.index-shell {
  margin-top: 92rpx;
  min-height: 960rpx;
  box-sizing: border-box;
  padding: 34rpx;
}

.home-title {
  font-size: 36rpx;
}

.home-subtitle {
  font-size: 22rpx;
}

.index-shell .label {
  margin: 30rpx 0 16rpx;
  font-size: 26rpx;
}

.question-input {
  width: 100%;
  height: 140rpx;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.question-input::placeholder {
  color: #9b92ab;
  font-size: 20rpx;
}

.spread-label {
  margin-top: 56rpx;
}

.picker {
  background: #fff;
  border: 1rpx solid #ddd2f2;
  border-radius: 16rpx;
  padding: 0 18rpx;
  font-size: 22rpx;
  color: #4d3d6f;
  height: 68rpx;
  line-height: 68rpx;
}

.action-main {
  margin-top: 74rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
}

.action-sub {
  margin-top: 20rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
}
