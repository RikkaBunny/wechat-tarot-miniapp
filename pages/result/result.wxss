
.result-shell {
  margin-top: 44rpx;
  min-height: 1080rpx;
}

.result-title {
  font-size: 42rpx;
}

.question-text {
  font-size: 25rpx;
  line-height: 1.62;
  color: #fff8ea;
}

.spotlight {
  margin-top: 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.36);
  background: linear-gradient(180deg, rgba(45, 27, 77, 0.78), rgba(17, 11, 34, 0.86));
  padding: 20rpx;
}

.spotlight-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.spotlight-position {
  font-size: 24rpx;
  color: rgba(247, 229, 191, 0.86);
}

.spotlight-orientation {
  min-width: 96rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 20rpx;
}

.spotlight-name {
  margin-top: 12rpx;
  font-size: 38rpx;
  color: #fff8ea;
  font-weight: 700;
}

.spotlight-keywords,
.spotlight-advice {
  margin-top: 10rpx;
  font-size: 23rpx;
  line-height: 1.58;
  color: rgba(247, 229, 191, 0.9);
}

.hint {
  margin-top: 16rpx;
}

.spread-scroll {
  width: 100%;
  margin-top: 14rpx;
  white-space: nowrap;
}

.spread-cards {
  display: flex;
  gap: 14rpx;
  padding-bottom: 8rpx;
}

.spread-card {
  width: 220rpx;
  min-height: 180rpx;
  flex-shrink: 0;
  border-radius: 18rpx;
  padding: 18rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(245, 215, 151, 0.24);
  background: rgba(20, 13, 38, 0.78);
}

.spread-card.active {
  border-color: rgba(245, 215, 151, 0.62);
  box-shadow: 0 0 0 2rpx rgba(245, 215, 151, 0.22) inset;
}

.card-position {
  font-size: 21rpx;
  color: rgba(247, 229, 191, 0.82);
}

.card-name {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #fff8ea;
  font-weight: 700;
}

.card-tag,
.spotlight-orientation {
  margin-top: 12rpx;
  display: inline-block;
  padding: 0 14rpx;
}

.upright {
  color: #2f9e73;
  background: #eaf8f2;
}

.reversed {
  color: #be5e46;
  background: #fff1ed;
}

.summary-box {
  margin-top: 24rpx;
  padding: 20rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.34);
  background: rgba(15, 10, 28, 0.78);
}

.summary-title {
  font-size: 27rpx;
  color: #f6d897;
}

.summary-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 1.68;
  color: #f8eedb;
}

.action-grid {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.empty {
  text-align: center;
}

.fallback-btn {
  margin-top: 34rpx;
}
