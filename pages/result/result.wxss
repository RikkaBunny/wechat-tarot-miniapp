.result-shell {
  margin-top: 80rpx;
  min-height: 1120rpx;
  box-sizing: border-box;
  padding: 34rpx 40rpx;
}

.result-title {
  font-size: 38rpx;
}

.meta,
.summary,
.flip-tip {
  margin-top: 20rpx;
  line-height: 1.6;
  color: #5f5374;
  font-size: 22rpx;
}

.flip-tip {
  color: #7a6e91;
}

.card-list {
  margin-top: 30rpx;
}

.flip-card {
  margin-bottom: 30rpx;
  min-height: 250rpx;
  perspective: 1200rpx;
}

.flip-inner {
  position: relative;
  min-height: 250rpx;
  height: 250rpx;
  transform-style: preserve-3d;
  transition: transform 0.6s ease;
}

.flip-card.flipped .flip-inner {
  transform: rotateY(180deg);
}

.flip-face {
  position: absolute;
  inset: 0;
  border-radius: 18rpx;
  backface-visibility: hidden;
  box-sizing: border-box;
  padding: 18rpx 30rpx;
}

.flip-front {
  background: linear-gradient(160deg, #4a2f71, #8759c7);
  color: #efe6ff;
  border: 1rpx solid #9872cf;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 14rpx;
}

.front-position {
  font-size: 24rpx;
  opacity: 0.9;
}

.front-title {
  font-size: 34rpx;
  font-weight: 700;
}

.flip-back {
  transform: rotateY(180deg);
  background: #f8f3ff;
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.position {
  font-size: 22rpx;
  color: #8b809e;
}

.card-name {
  margin-top: 8rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.orientation {
  width: 130rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 22rpx;
  font-size: 22rpx;
}

.upright {
  color: #2f9e73;
  background: #eaf8f2;
}

.reversed {
  color: #be5e46;
  background: #fff1ed;
}

.keywords,
.advice {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #5f5374;
  line-height: 1.6;
}

.action-main {
  margin-top: 10rpx;
}

.action-sub {
  margin-top: 18rpx;
}

.empty {
  text-align: center;
}

.fallback-btn {
  margin-top: 40rpx;
}
