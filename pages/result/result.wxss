.meta,
.question,
.summary {
  margin-top: 14rpx;
  line-height: 1.6;
  color: #5f5374;
  font-size: 26rpx;
}

.card-list {
  margin-top: 20rpx;
}

.card-item {
  margin-bottom: 16rpx;
  padding: 18rpx;
  border-radius: 18rpx;
  background: #f8f3ff;
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.position {
  font-size: 24rpx;
  color: #877c99;
}

.card-name {
  margin-top: 4rpx;
  font-size: 34rpx;
  font-weight: 700;
}

.orientation {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.upright {
  color: #2f9e73;
  background: #eaf8f2;
}

.reversed {
  color: #be5e46;
  background: #fff1ed;
}

.keywords,
.advice,
.arcana {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #5f5374;
  line-height: 1.65;
}

.arcana {
  font-size: 24rpx;
  color: #8a809b;
}

.empty {
  text-align: center;
}
