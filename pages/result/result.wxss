.result-shell {
  margin-top: 80rpx;
  min-height: 1120rpx;
  box-sizing: border-box;
  padding: 34rpx 40rpx;
}

.result-title {
  font-size: 38rpx;
}

.meta,
.summary {
  margin-top: 20rpx;
  line-height: 1.6;
  color: #5f5374;
  font-size: 22rpx;
}

.card-list {
  margin-top: 30rpx;
}

.card-item {
  margin-bottom: 30rpx;
  min-height: 220rpx;
  padding: 18rpx 30rpx;
  border-radius: 18rpx;
  background: #f8f3ff;
  box-sizing: border-box;
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.position {
  font-size: 22rpx;
  color: #8b809e;
}

.card-name {
  margin-top: 8rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.orientation {
  width: 130rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 22rpx;
  font-size: 22rpx;
}

.upright {
  color: #2f9e73;
  background: #eaf8f2;
}

.reversed {
  color: #be5e46;
  background: #fff1ed;
}

.keywords,
.advice {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #5f5374;
  line-height: 1.6;
}

.empty {
  text-align: center;
}

.fallback-btn {
  margin-top: 40rpx;
}
