.history-shell {
  margin-top: 50rpx;
  min-height: 1040rpx;
  padding: 34rpx;
  box-sizing: border-box;
}

.history-title {
  font-size: 40rpx;
}

.history-item {
  margin-top: 20rpx;
  padding: 18rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.2);
  background: rgba(16, 10, 32, 0.72);
}

.item-head {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.item-title {
  font-size: 28rpx;
  color: #fff7e8;
  font-weight: 700;
}

.item-time {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: rgba(247, 229, 191, 0.62);
}

.item-question,
.item-summary {
  margin-top: 12rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: rgba(247, 229, 191, 0.8);
}

.clear-btn {
  margin-top: 34rpx;
}

.empty {
  text-align: center;
}
