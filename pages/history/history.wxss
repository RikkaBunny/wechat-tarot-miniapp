.history-shell {
  margin-top: 100rpx;
  min-height: 1040rpx;
  box-sizing: border-box;
  padding: 34rpx 40rpx;
}

.history-title {
  font-size: 38rpx;
}

.history-item {
  margin-top: 30rpx;
  min-height: 190rpx;
  padding: 18rpx 30rpx;
  border-radius: 18rpx;
  background: #f8f3ff;
  box-sizing: border-box;
}

.item-head {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
}

.item-time {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: #9086a4;
}

.item-question,
.item-summary {
  margin-top: 12rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: #5f5374;
}

.clear-btn {
  margin-top: 50rpx;
}

.empty {
  text-align: center;
}
