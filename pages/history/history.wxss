.history-item {
  margin-top: 18rpx;
  padding: 18rpx;
  border-radius: 18rpx;
  background: #f8f3ff;
}

.item-head {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
}

.item-time {
  font-size: 22rpx;
  color: #9086a4;
}

.item-question,
.item-summary {
  margin-top: 8rpx;
  font-size: 25rpx;
  line-height: 1.6;
  color: #5f5374;
}

.empty {
  text-align: center;
  margin-top: 140rpx;
}
