
.history-shell {
  margin-top: 44rpx;
  min-height: 1020rpx;
}

.history-title {
  font-size: 42rpx;
}

.history-item {
  margin-top: 16rpx;
  padding: 18rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.22);
  background: rgba(16, 10, 32, 0.75);
}

.item-head {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.item-title {
  font-size: 27rpx;
  color: #fff7e8;
  font-weight: 700;
}

.item-time {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: rgba(247, 229, 191, 0.62);
}

.item-question,
.item-summary {
  margin-top: 10rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: rgba(247, 229, 191, 0.84);
}

.action-row {
  margin-top: 26rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  font-size: 24rpx;
}

.clear-btn {
  margin-top: 32rpx;
}

.empty {
  text-align: center;
}
