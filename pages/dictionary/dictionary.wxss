
.dictionary-shell {
  margin-top: 44rpx;
  min-height: 1120rpx;
}

.search-row {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.32);
  background: rgba(22, 14, 43, 0.82);
  padding: 0 18rpx;
  box-sizing: border-box;
  color: #fff7e8;
  font-size: 24rpx;
}

.search-placeholder {
  color: rgba(247, 229, 191, 0.52);
}

.icon-btn {
  width: 110rpx;
  height: 72rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.34);
  background: rgba(22, 14, 43, 0.82);
  color: #f7e5bf;
  font-size: 22rpx;
}

.icon-btn.active {
  color: #2c1a07;
  background: linear-gradient(135deg, #f6d58c, #c99c42);
}

.chip-scroll {
  margin-top: 14rpx;
  width: 100%;
  white-space: nowrap;
}

.chip-row {
  display: inline-flex;
  gap: 10rpx;
  padding-right: 20rpx;
}

.chip {
  padding: 0 22rpx;
  height: 54rpx;
  border-radius: 28rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.3);
  color: rgba(247, 229, 191, 0.88);
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chip-soft {
  border-color: rgba(245, 215, 151, 0.18);
}

.chip.selected {
  color: #2c1a07;
  background: linear-gradient(135deg, #f6d58c, #c99c42);
  border-color: transparent;
}

.tool-row {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tool-btn {
  width: 180rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.3);
  color: #f7e5bf;
  font-size: 20rpx;
  background: rgba(20, 13, 38, 0.82);
}

.count-text {
  color: rgba(247, 229, 191, 0.72);
  font-size: 22rpx;
}

.card-grid {
  margin-top: 18rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
}

.card-item {
  padding: 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.24);
  background: rgba(16, 10, 32, 0.76);
}

.card-cover {
  position: relative;
  height: 170rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(245, 215, 151, 0.34);
  background: linear-gradient(160deg, rgba(56, 35, 101, 0.96), rgba(18, 11, 35, 0.96));
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-symbol {
  color: rgba(246, 216, 151, 0.95);
  font-size: 44rpx;
}

.fav-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  font-size: 22rpx;
  color: rgba(247, 229, 191, 0.72);
  background: rgba(18, 11, 35, 0.85);
}

.fav-btn.active {
  color: #f6d58c;
}

.card-name {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #fff8ea;
  font-weight: 700;
}

.card-keywords {
  margin-top: 8rpx;
  font-size: 20rpx;
  line-height: 1.5;
  color: rgba(247, 229, 191, 0.82);
}

.card-tags {
  margin-top: 8rpx;
  font-size: 18rpx;
  color: rgba(247, 229, 191, 0.62);
}

.empty {
  margin-top: 28rpx;
  text-align: center;
  color: rgba(247, 229, 191, 0.72);
  font-size: 22rpx;
}
